/*   chokidar hss/*.hss style.hss -c "hss style.hss"   */

@import("hss/_vars");
@import("hss/normalize");

var debug-border = {
	@if debug
	border: 1px solid #ddd;
	@end
}

body {
	font-family: $text-font;
	font-size: $font-size;
	color: $text-color;
	background-color: $bg-color;
}

a[href], a[href]:link, a[href]:visited {
	color: $primary;
}

.container {
	box-sizing: border-box;
	width: 100%;
	padding-left: $container-padding-lr;
	padding-right: $container-padding-lr;
	margin-left: auto;
	margin-right: auto;
	max-width: $container-xl;
}

/* layout */
var border-shadow-up = 1px solid darken($light, 10%);
var border-shadow-down = 1px solid darken($light, 2%);
var padding-tb = $font-size;
var padding-tb-half = $padding-tb * 0.5;


#header {
	font-family: $label-font; /* 当排成一行时, 必须使用相同的字体, 才能保证高度的间距一致, 特别是有中英文混合时 */
	background-color: $white;
	color: $gray;
	$clear-after;
	border-bottom: $border-shadow-up;
	
	.brand {
		text-decoration: none;
		display: inline-block;
		color: $gray;
		font-weight: bold;
		padding: $padding-tb 0 $padding-tb 0;
	}
	
	.menu-btn {
		display: none;
		float: right;
		padding: $padding-tb-half * .875;
		margin-top: $padding-tb-half * 1.125;
		var color = lighten($gray, 15%);
		color: $color;
		border: 1px solid $color;
		background-color: transparent;
		cursor: pointer;
		> span {
			display: block;
			width: $font-size;
			height: 2px;
			margin-top: ($font-size - (2px * 3)) * .5;
			pointer-events: none;
			background-color: $color;
			border-radius: 2px;
			&:first-child {
				margin-top: 0;
			}
		}
	}

	.menu-list {
		float: right;
		> a {
			text-decoration: none;
			display: inline-block;
			padding: $padding-tb $padding-tb * 1.5;
			color: $gray;
			background-color: transparent;
			&:hover {
				color: darken($gray, 10%);
				background-color: darken($light, 5%);
			}
			&.active {
				color: $primary;
				padding-bottom: $padding-tb - 2;
				border-bottom: 2px solid $primary;
				background-color: transparent;
			}
		}
	}


	/* for mobile */
	@media (max-width: $breakpoint-md) {
		.menu-btn {
			display: block;
		}
		.menu-list {
			float: none;
			list-style: none;
			margin-left: -$container-padding-lr;
			margin-right: -$container-padding-lr;
			> a {
				display: list-item;
				var padding = $padding-tb * .75;
				padding: $padding $container-padding-lr;
				margin: 0;
				&.active {
					color: $white;
					background-color: $primary;
					border-bottom: 0;
					padding-bottom: $padding;
				}
			}
		}
	}
}

#mainContainer {
	padding-top: $font-size * 2;
	border-top: $border-shadow-down;
	$clear-after;
}

var text-color = #563D7C; // 紫色 #716b7a

#leftSideBar {
	float: left;
	width: 25%;
	background-color: $light;
	list-style: none;
	a {
		font-size: $font-size-md;
		display: list-item;
		color: $text-color;
		text-decoration: none;
		padding: int($font-size * .35) 0;
		&:hover {
			color: $primary;
			text-decoration: underline;
		}
	}
	@media (max-width: $breakpoint-md) {
		display: none;
	}
}

#mainContent {
	float: left;
	width: 75%;
	> .summary-section {
		
		min-height: $font-size * 8;
		
		> a {
			font-family: $label-font;
			font-size: int($font-size * 1.125);
			color: $text-color;
			text-decoration: none;
			&:hover {
				text-decoration: underline;
			}
		}
		> .summary-text {
			margin-top: $font-size;
			font-size: $font-size-md;
			color: lighten($text-color, 5%);
			text-indent: 2 * $font-size;
			line-height: 1.5;
		}
	}
	@media (max-width: $breakpoint-md) {
		display: block;
		width: 100%;
	}
}

#footer {
	font-size: $font-size * .75;
}
